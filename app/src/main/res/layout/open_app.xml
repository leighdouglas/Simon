<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:layout_centerInParent="true"
        android:background="@drawable/playflat"
        android:onClick="playClick"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/simon_title"
        android:background="@drawable/simon_flat"
        android:layout_above="@id/play_button"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/directionsflat2"
        android:layout_below="@id/play_button"
        android:layout_centerHorizontal="true"
        android:onClick="directionsClick"
        />
</RelativeLayout>